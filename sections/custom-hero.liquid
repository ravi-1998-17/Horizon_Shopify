{% comment %}
  Custom Animated Hero Section
{% endcomment %}

<section class="custom-hero">
  <div class="container">
    <div
      class="bg"
      style="
        background-image: url({{ section.settings.bg_image | image_url: width: 3000 }});
      "
    ></div>

    <div class="content">
      {% if section.settings.logo != blank %}
        <img
          src="{{ section.settings.logo | image_url: width: 800 }}"
          alt="{{ section.settings.logo.alt | escape }}"
          loading="lazy"
          width="{{ section.settings.logo.width }}"
          height="{{ section.settings.logo.height }}"
        >
      {% endif %}
    </div>
  </div>
</section>

<style>
* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

.custom-hero .container {
  position: relative;
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

/* BACKGROUND LAYER */
.custom-hero .bg {
  position: absolute;
  inset: 0;
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;

  animation:
    BgFadeIn 2s ease-in forwards,
    bgBreathe 2.5s ease-in-out infinite alternate;

  will-change: transform, opacity;
}

/* CONTENT LAYER */
.custom-hero .content {
  position: relative;
  z-index: 2;
}

/* LOGO */
.custom-hero .content img {
  width: min(500px, 60vw);
  height: auto;
  opacity: 0;
  transform: translateY(12px);
  animation: logoFadeIn 1.2s ease forwards;
  animation-delay: 0.6s;
}

/* RESPONSIVE */
@media (max-width: 480px) {
  .custom-hero .content img {
    width: min(450px, 70vw);
  }
}

/* ANIMATIONS */
@keyframes BgFadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 0.75;
  }
}

@keyframes bgBreathe {
  from {
    transform: scale(0.89);
  }
  to {
    transform: scale(0.91);
  }
}

@keyframes logoFadeIn {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
</style>

{% schema %}
{
  "name": "Custom Animated Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background image"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    }
  ],
  "presets": [
    {
      "name": "Custom Animated Hero"
    }
  ]
}
{% endschema %}
